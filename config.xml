<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.SablokEnt.GuessTheNumber"
    versionCode = "15"
    version     = "1.0.5" >

    <!-- versionCode is optional and Android only -->

    <name>Guess The Number</name>

    <description>
      Fill the missing number in the grid such that the mathematical sanctity of the grid is maintained. Ideal for learning basic calulations of Mathematics.
    </description>

    <author href="https://plus.google.com/102568059178551469997/auto" email="gauravsblk@gmail.com">
      Gaurav Sablok
    </author>

	<gap:platform name="android" />
	
    <platform name="android">
              <icon src="icon.png" density="ldpi" />
              <icon src="icon.png" density="mdpi" />
              <icon src="icon.png" density="hdpi" />
              <icon src="icon.png" density="xhdpi" />
     </platform>

	 <preference name="orientation" value="portrait" />
	 <preference name="SplashScreen" value="splash" />
	 <preference name="SplashScreenDelay" value="800"/> 
	 <preference name="android-minSdkVersion" value="16" />
	 
	<splash src="splash.png"/>
	<splash src="sldpi.png" platform="android" qualifier="ldpi" />
	<splash src="smdpi.png" platform="android" qualifier="mdpi" />
	<splash src="shdpi.png" platform="android" qualifier="hdpi" />
	<splash src="sxhdpi.png" platform="android" qualifier="xhdpi" />
	<splash src="sxxhdpi.png" platform="android" qualifier="xxhdpi" />
	<splash src="sxxxhdpi.png" platform="android" qualifier="xxxhdpi" />
	
    <!-- Plugins -->
    <!--<plugin name="Storage" value="org.apache.cordova.Storage" />-->

</widget>